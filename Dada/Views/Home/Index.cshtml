                <!-- WIDGET BOX CONTENT -->
                <div class="widget-box-content">
                    <!-- POST PEEK LIST -->
                    <div class="post-peek-list">

                        @foreach (var item in Model.Posts)
                        {
                            <!-- POST PEEK -->
                            <div class="post-peek">
                                <!-- POST PEEK TITLE -->
                                <p class="post-peek-title">
                                    <a asp-controller="post" asp-action="index" asp-route-id="@item.Id">
                                        @item.Title
                                    </a><span class="badge badge-secondary ml-2">45</span>
                                </p>
                                <!-- /POST PEEK TITLE -->
                                <!-- POST PEEK TEXT -->
                                <p class="post-peek-text">@item.AddedDate.ToString("dd.MM.yyyy")</p>
                                <!-- /POST PEEK TEXT -->
                                <!-- POST PEEK TEXT -->
                                <a href="#" class="post-peek-text">@item.User.Username</a>
                                <!-- /POST PEEK TEXT -->
                            </div>
                            <!-- /POST PEEK -->
                        }
                    </div>
                    <!-- /POST PEEK LIST -->
                </div>
                <!-- /WIDGET BOX CONTENT -->
            </div>
