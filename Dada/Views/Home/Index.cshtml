                        <p class="button small void">Discard</p>
                        <!-- /BUTTON -->
                        <!-- BUTTON -->
                        <p class="button small secondary">Post</p>
                        <!-- /BUTTON -->
                    </div>
                    <!-- /QUICK POST FOOTER ACTIONS -->
                </div>
                <!-- /QUICK POST FOOTER -->
            </div>
